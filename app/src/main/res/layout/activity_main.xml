<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/darker_gray"
    android:clickable="false"
    android:contextClickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">


    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HOME SECURITY"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:splitTrack="true"
        android:background="#ffffff"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="120dp"
        android:layout_marginBottom="5dp"
        android:capitalize="words"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:checked="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Door Locks:"
        android:id="@+id/door_locks"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true"
        android:backgroundTint="#ffffff"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Cameras: 6 Online"
        android:id="@+id/camera"
        android:layout_below="@+id/door_locks"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/door_locks"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lights:"
        android:id="@+id/lights"
        android:layout_below="@+id/camera"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/camera"
        android:backgroundTint="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Thermostats:"
        android:id="@+id/thermostats"
        android:layout_below="@+id/lights"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/lights"
        android:backgroundTint="#ffffff" />

</RelativeLayout>
