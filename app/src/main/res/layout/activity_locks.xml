<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Front Door:"
        android:id="@+id/front" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M. Bedroom Door:"
        android:id="@+id/master"
        android:layout_below="@+id/front"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back Door:"
        android:id="@+id/back"
        android:layout_below="@+id/master"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room Door:"
        android:id="@+id/living"
        android:layout_below="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitchen Door:"
        android:id="@+id/kitchen"
        android:layout_below="@+id/living"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basement Door:"
        android:id="@+id/basement"
        android:layout_below="@+id/kitchen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
